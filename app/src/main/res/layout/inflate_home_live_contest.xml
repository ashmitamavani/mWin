<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relSlider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_15"
        android:layout_marginTop="@dimen/dim_5"
        android:layout_marginEnd="@dimen/dim_15"
        android:layout_marginBottom="@dimen/dim_10"
        android:visibility="visible"
        app:cardBackgroundColor="#2BC998"
        app:cardCornerRadius="@dimen/dim_10"
        app:cardElevation="@dimen/dim_2">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieBg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dim_2"
                android:adjustViewBounds="true"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/tvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="end"
                android:background="@drawable/task_scratch_card_label_bg"
                android:backgroundTint="@color/red"
                android:elevation="@dimen/dim_2"
                android:ellipsize="end"
                android:fontFamily="@font/noto_extra_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingLeft="@dimen/dim_6"
                android:paddingTop="@dimen/dim_2"
                android:paddingRight="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_3"
                android:text="Live"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_12" />

            <LinearLayout
                android:id="@+id/layoutContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layoutContentClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_15"
                        android:layout_marginTop="@dimen/dim_15"
                        android:layout_marginRight="@dimen/dim_15"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/dim_2"
                            android:layout_height="@dimen/dim_40"
                            android:layout_marginTop="@dimen/dim_20"
                            android:background="@color/red" />

                        <View
                            android:layout_width="@dimen/dim_40"
                            android:layout_height="@dimen/dim_2"
                            android:layout_marginTop="@dimen/dim_20"
                            android:background="@color/red" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/lblTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dim_40"
                                android:background="@drawable/bg_live_leaderboard"
                                android:ellipsize="end"
                                android:fontFamily="@font/noto_extra_bold"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:letterSpacing="0.01"
                                android:lineSpacingExtra="@dimen/dim_1"
                                android:lineSpacingMultiplier="1.2"
                                android:maxWidth="@dimen/dim_240"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/dim_15"
                                android:paddingRight="@dimen/dim_15"
                                android:text="Leaderboard Contest"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSize_16" />

                            <View
                                android:id="@+id/viewShineHeader"
                                android:layout_width="@dimen/dim_30"
                                android:layout_height="@dimen/dim_40"
                                android:layout_centerVertical="true"
                                android:background="@drawable/shine_button_view"
                                android:elevation="@dimen/dim_2"
                                android:rotation="15"
                                android:visibility="visible" />

                        </RelativeLayout>

                        <View
                            android:layout_width="@dimen/dim_40"
                            android:layout_height="@dimen/dim_2"
                            android:layout_marginTop="@dimen/dim_20"
                            android:background="@color/red" />

                        <View
                            android:layout_width="@dimen/dim_2"
                            android:layout_height="@dimen/dim_40"
                            android:layout_marginTop="@dimen/dim_20"
                            android:background="@color/red" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dim_25"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dim_15"
                            android:layout_marginRight="@dimen/dim_15"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/layoutYourRank"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:background="@drawable/bg_gradient_live_content"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/dim_10"
                                android:paddingTop="@dimen/dim_10"
                                android:paddingRight="@dimen/dim_10"
                                android:paddingBottom="@dimen/dim_10">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/noto_regular"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:maxLines="1"
                                    android:text="Your Rank"
                                    android:textColor="@color/black_font"
                                    android:textSize="@dimen/textSize_15" />

                                <TextView
                                    android:id="@+id/tvYourRank"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dim_5"
                                    android:fontFamily="@font/noto_extra_bold"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="50+"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/textSize_20"
                                    android:visibility="visible" />

                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/dim_0_5"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dim_8"
                                android:layout_marginRight="@dimen/dim_8" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:background="@drawable/bg_gradient_live_content"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/dim_10"
                                android:paddingTop="@dimen/dim_10"
                                android:paddingRight="@dimen/dim_10"
                                android:paddingBottom="@dimen/dim_10">


                                <TextView
                                    android:id="@+id/lblPoints"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/noto_regular"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:maxLines="2"
                                    android:text="Win Points"
                                    android:textColor="@color/black_font"
                                    android:textSize="@dimen/textSize_15" />

                                <TextView
                                    android:id="@+id/tvPoints"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dim_5"
                                    android:fontFamily="@font/noto_extra_bold"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="1000"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/textSize_20"
                                    android:visibility="visible" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/lblSubTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ad_live_leaderboard_sub_title"
                        android:ellipsize="end"
                        android:fontFamily="@font/noto_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/dim_1"
                        android:lineSpacingMultiplier="1.2"
                        android:maxWidth="@dimen/dim_300"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dim_15"
                        android:paddingTop="@dimen/dim_8"
                        android:paddingRight="@dimen/dim_15"
                        android:paddingBottom="@dimen/dim_8"
                        android:text="Play Now &amp; Earn Big >>"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_15" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>