<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dim_5"
        android:layout_marginTop="@dimen/dim_5"
        android:layout_marginEnd="@dimen/dim_5"
        android:layout_marginBottom="@dimen/dim_5"
        android:clickable="false"
        android:elevation="@dimen/dim_2"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutPoints"
                android:layout_width="@dimen/_46sdp"
                android:layout_height="@dimen/_46sdp"
                android:layout_gravity="center"
                android:background="@drawable/everyday_ckeckin_background"
                android:gravity="center">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/login_light" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/ivCoin"
                        android:layout_width="@dimen/dim_15"
                        android:layout_height="@dimen/dim_15"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_points_coin" />

                    <TextView
                        android:id="@+id/tvPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dim_3"
                        android:layout_toRightOf="@id/ivCoin"
                        android:fontFamily="@font/noto_extra_bold"
                        android:includeFontPadding="false"
                        android:text="100"
                        android:textColor="@color/black_font"
                        android:textSize="@dimen/textSize_16"
                        android:visibility="visible" />
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dim_5"
                android:paddingTop="@dimen/dim_5"
                android:paddingRight="@dimen/dim_5"
                android:paddingBottom="@dimen/dim_6">

                <TextView
                    android:id="@+id/tvDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Day 15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_12" />

                <ImageView
                    android:id="@+id/ivDone"
                    android:layout_width="@dimen/dim_15"
                    android:layout_height="@dimen/dim_15"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dim_5"
                    android:src="@drawable/ic_verified"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLock"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_68sdp"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dim_5"
        android:layout_marginEnd="@dimen/dim_5"
        android:layout_marginBottom="@dimen/dim_5"
        android:background="@drawable/round_black_transparent"
        android:elevation="@dimen/dim_2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dim_20"
        android:paddingTop="@dimen/dim_25"
        android:paddingRight="@dimen/dim_20"
        android:paddingBottom="@dimen/dim_25"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dim_20"
            android:layout_height="@dimen/dim_20"
            android:src="@drawable/ic_lock"
            app:tint="@color/white" />
    </LinearLayout>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/viewTouch"
        android:layout_width="@dimen/dim_50"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:elevation="@dimen/dim_2"
        android:visibility="gone"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/touch_hand"
        app:lottie_speed="2" />

</RelativeLayout>