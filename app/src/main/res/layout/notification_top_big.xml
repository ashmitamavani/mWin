<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_10">

        <TextView
            android:id="@+id/txtNotiTitleBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_extra_bold"
            android:gravity="left"
            android:includeFontPadding="false"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_16"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivNotiImageBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNotiTitleBig"
            android:layout_marginTop="@dimen/dim_10"
            android:adjustViewBounds="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtNotiDescBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivNotiImageBig"
            android:layout_marginTop="@dimen/dim_10"
            android:fontFamily="@font/noto_regular"
            android:includeFontPadding="false"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="@dimen/dim_1"
            android:lineSpacingMultiplier="1.1"
            android:textColor="@color/black_font"
            android:textSize="@dimen/textSize_14"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>