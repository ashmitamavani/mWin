<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_10">

        <ImageView
            android:id="@+id/ivNotiImageBig"
            android:layout_width="@dimen/dim_70"
            android:layout_height="@dimen/dim_70"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dim_10"
            android:adjustViewBounds="true"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ivNotiImageBig"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNotiTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_extra_bold"
                android:gravity="left"
                android:includeFontPadding="false"
                android:text="@string/app_name"
                android:textColor="@color/black_font"
                android:textSize="@dimen/textSize_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNotiDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_6"
                android:fontFamily="@font/noto_regular"
                android:includeFontPadding="false"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="@dimen/dim_1"
                android:lineSpacingMultiplier="1.1"
                android:text="@string/app_name"
                android:textColor="@color/black_font"
                android:textSize="@dimen/textSize_12"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>