<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_15"
        android:layout_marginTop="@dimen/dim_5"
        android:layout_marginRight="@dimen/dim_15"
        android:layout_marginBottom="@dimen/dim_10"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_10"
        app:cardElevation="@dimen/dim_3">

        <LinearLayout
            android:id="@+id/relTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvContestId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dim_10"
                    android:layout_marginRight="@dimen/dim_10"
                    android:layout_marginBottom="@dimen/dim_5"
                    android:background="@drawable/contest_number_background"
                    android:elevation="@dimen/dim_3"
                    android:fontFamily="@font/noto_extra_bold"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/dim_10"
                    android:paddingTop="@dimen/dim_3"
                    android:paddingRight="@dimen/dim_10"
                    android:paddingBottom="@dimen/dim_3"
                    android:text="Contest Id: 1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_8"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dim_10"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_medium"
                                android:includeFontPadding="false"
                                android:text="Start Date:  "
                                android:textColor="@color/light_grey_font"
                                android:textSize="@dimen/textSize_12" />

                            <TextView
                                android:id="@+id/tvStartDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_extra_bold"
                                android:includeFontPadding="false"
                                android:textColor="@color/black_font"
                                android:textSize="@dimen/textSize_12"
                                android:visibility="visible" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dim_8"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_medium"
                                android:includeFontPadding="false"
                                android:text="End Date:  "
                                android:textColor="@color/light_grey_font"
                                android:textSize="@dimen/textSize_12" />

                            <TextView
                                android:id="@+id/tvEndDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_extra_bold"
                                android:includeFontPadding="false"
                                android:textColor="@color/black_font"
                                android:textSize="@dimen/textSize_12"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_extra_bold"
                            android:includeFontPadding="false"
                            android:text="10"
                            android:textColor="@color/black_font"
                            android:textSize="@dimen/textSize_16"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/lblPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dim_5"
                            android:fontFamily="@font/noto_medium"
                            android:includeFontPadding="false"
                            android:text="Points"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/textSize_10"
                            android:visibility="visible" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dim_10"
                    android:background="@drawable/bg_dashed_background"
                    android:orientation="vertical"
                    android:padding="@dimen/dim_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/noto_medium"
                            android:includeFontPadding="false"
                            android:paddingRight="@dimen/dim_10"
                            android:singleLine="true"
                            android:text="Winning Numbers:"
                            android:textColor="@color/grey_font"
                            android:textSize="@dimen/textSize_12" />


                        <TextView
                            android:id="@+id/tvWinningNumber1"
                            android:layout_width="@dimen/dim_24"
                            android:layout_height="@dimen/dim_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dim_5"
                            android:background="@drawable/bg_lucky_number_game_selected"
                            android:fontFamily="@font/noto_extra_bold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_12" />


                        <TextView
                            android:id="@+id/tvWinningNumber2"
                            android:layout_width="@dimen/dim_24"
                            android:layout_height="@dimen/dim_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dim_10"
                            android:background="@drawable/bg_lucky_number_game_selected"
                            android:fontFamily="@font/noto_extra_bold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_12" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layoutStatus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_25"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@color/grey_button_pressed">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/noto_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Wallet balance"
                    android:textColor="@color/black_font"
                    android:textSize="@dimen/textSize_13"
                    android:visibility="visible" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/fl_adplaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutContent"
        android:layout_marginLeft="@dimen/dim_15"
        android:layout_marginTop="@dimen/dim_5"
        android:layout_marginRight="@dimen/dim_15"
        android:layout_marginBottom="@dimen/dim_10"
        android:background="@drawable/rectangle_white"
        android:elevation="@dimen/dim_3"
        android:visibility="gone" />
</LinearLayout>