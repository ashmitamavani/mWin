<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginTop="@dimen/dim_5"
        android:layout_marginRight="@dimen/dim_5"
        android:layout_marginBottom="@dimen/dim_10"
        android:background="@drawable/rectangle_white"
        android:elevation="@dimen/dim_1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/dim_40"
            android:layout_height="@dimen/dim_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginEnd="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_10"
            android:adjustViewBounds="true"
            android:padding="@dimen/dim_3"
            android:src="@drawable/ic_gift" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dim_8"
            android:layout_marginEnd="@dimen/dim_8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim_5"
                android:ellipsize="end"
                android:fontFamily="@font/noto_regular"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="Watch video &amp; get"
                android:textColor="@color/black_font"
                android:textSize="@dimen/textSize_13" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/noto_extra_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="Upto 25 Points"
                android:textColor="@color/black_font"
                android:textSize="@dimen/textSize_16" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/layoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dim_10"
                android:background="@drawable/selector_btn"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dim_8"
                android:paddingRight="@dimen/dim_8">

                <ImageView
                    android:id="@+id/ivDone"
                    android:layout_width="@dimen/dim_15"
                    android:layout_height="@dimen/dim_15"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_done"
                    android:visibility="gone"
                    app:tint="@color/green" />

                <TextView
                    android:id="@+id/tvButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_34"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dim_5"
                    android:layout_marginRight="@dimen/dim_5"
                    android:background="@null"
                    android:fontFamily="@font/noto_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Watch Now"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_14" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/ivLock"
                    android:layout_width="@dimen/dim_15"
                    android:layout_height="@dimen/dim_15"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_lock"
                    android:visibility="gone"
                    app:tint="@color/black_font" />
            </LinearLayout>

            <View
                android:id="@+id/viewShine"
                android:layout_width="@dimen/dim_25"
                android:layout_height="@dimen/dim_50"
                android:layout_centerVertical="true"
                android:background="@drawable/shine_button_view"
                android:elevation="@dimen/dim_2"
                android:rotation="22" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>