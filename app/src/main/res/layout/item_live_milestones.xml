<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMain"
    android:layout_width="@dimen/dim_180"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dim_5"
        android:layout_marginTop="@dimen/dim_5"
        android:layout_marginEnd="@dimen/dim_8"
        android:layout_marginBottom="@dimen/dim_5"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_10"
        app:cardElevation="@dimen/dim_2">

        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/noto_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lines="1"
                android:paddingLeft="@dimen/dim_10"
                android:paddingTop="@dimen/dim_6"
                android:paddingRight="@dimen/dim_10"
                android:paddingBottom="@dimen/dim_6"
                android:text="Complete 500 tasks"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_14" />


            <LinearLayout
                android:id="@+id/layoutPoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dim_6"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivCoin"
                    android:layout_width="@dimen/dim_15"
                    android:layout_height="@dimen/dim_15"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_points_coin" />

                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dim_3"
                    android:fontFamily="@font/noto_extra_bold"
                    android:includeFontPadding="false"
                    android:text="1"
                    android:textColor="@color/black_font"
                    android:textSize="@dimen/textSize_15"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCompletionPoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#300F9D58"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dim_10"
                android:paddingTop="@dimen/dim_6"
                android:paddingRight="@dimen/dim_10"
                android:paddingBottom="@dimen/dim_6">

                <TextView
                    android:id="@+id/tvCompletionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/noto_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="20000/200000"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_13" />


                <TextView
                    android:id="@+id/tvPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dim_5"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/noto_extra_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="(100%)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_12"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivDone"
                    android:layout_width="@dimen/dim_15"
                    android:layout_height="@dimen/dim_15"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dim_5"
                    android:src="@drawable/ic_verified"
                    app:tint="@color/green" />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>